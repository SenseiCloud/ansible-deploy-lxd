cluster:
  enabled: true
  server_name: "{{inventory_hostname}}"
  server_address: "{{ hostvars[inventory_hostname]['ansible_env'].SSH_CONNECTION.split(' ')[2] }}:8443"
  cluster_address: "{{ hostvars[groups['bootstrap']][0]['ansible_eno1']['ipv4']['address'] }}:8443"
  cluster_password: "{{ cluster_password }}"
  cluster_certificate: | 
{{ cluster_certificate | indent( width=4, first=True ) }}